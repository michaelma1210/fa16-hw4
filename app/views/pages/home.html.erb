<h1>Cats, todos, and users oh my.</h1>



<%= link_to "Make a new thing", cats_new_path %>
<!--<%= link_to "Make a new todo", todos_new_path %>-->
<!--<%= link_to "Make a new user", users_new_path %>-->

<table>
  <tr>
    <td><b> Name </b> </td>
  </tr>
  <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.name%></td>
      </tr>
  <% end %>
</table>

<table>
  <tr>
    <td><b> Tasks </b></td>
    <td><b> Finished </b></td>
  </tr>
  <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.tasks%></td>
        <td><%= todo.finished%></td>
      </tr>
  <% end %>
</table>


<table>
  <tr>
    <td><b>Username </b></td>
    <td><b>Email</b></td>
    <td><b>Age</b></td>

  </tr>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.username%></td>
        <td><%= user.email%></td>
        <td><%= user.age%></td>

      </tr>
  <% end %>
</table>

